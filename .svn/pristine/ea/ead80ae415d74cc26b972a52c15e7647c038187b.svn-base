.hoverMe {
  cursor: pointer;
}

.carte_button {
  position: absolute;
  z-index: 3;
}

.carte {
  position: relative;
  background-color: rgba(0,0,0, 0.5);
  height: 0%;
  transition: height 500ms;
}

.carte_button:hover + .carte {
  z-index: 3;
  top: 0px;
  height: 100%;
}

.carte:hover {
  z-index: 3;
  height: 100%;
}

.carte-text {
  width: 100%;
  height: 100%;
  text-align: center;
}

.carte-text > button {
  color: grey;
  border: 1px dashed;
  margin-top: 70%;
}

.carte-text > button:hover {
  color: white;
  border: 1px dashed;
  margin-top: 70%;
}
